<div class="container">
  
  <div class="modal fade" id="modal-login" role="dialog">
  
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 style="color:red;"><span class="glyphicon glyphicon-lock"></span> Login</h4>
        </div>
        <div class="modal-body">
          <div class="wrap-errors">
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>
          </div>
          <%= form_for :session, url: users_login_path, remote: :true do |f| %>
            <div class="form-group">
              <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label>
              <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
            </div>
            <div class="form-group">
              <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
              <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
            </div>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <button type="submit" class="btn btn-default btn-primary btn-block"><span class="glyphicon glyphicon-off"></span> Login</button>
          <% end %>
        </div>
        <div class="modal-footer">
          <p>Not a member? <a href="#">Sign Up</a></p>
          <p>Forgot <a href="#">Password?</a></p>
        </div>
      </div>
    </div>
  </div> 
</div>
